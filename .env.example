# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Gemini API Key (should be handled server-side in production)
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Production API Endpoint (when using server-side proxy)
VITE_API_ENDPOINT=https://your-api-server.com/api

# Polar.sh Configuration
# Set VITE_POLAR_ENVIRONMENT to 'sandbox' for development, 'production' for live
VITE_POLAR_ENVIRONMENT=sandbox
VITE_POLAR_ACCESS_TOKEN=your_polar_access_token_here
VITE_POLAR_ORGANIZATION_ID=your_polar_organization_id

# Sandbox URLs (automatically used when VITE_POLAR_ENVIRONMENT=sandbox)
# Production: https://api.polar.sh
# Sandbox: https://sandbox-api.polar.sh

# Polar.sh Product Price IDs (replace with your actual sandbox/production price IDs)
VITE_POLAR_PRICE_ONE_TIME=price_one_time_id
VITE_POLAR_PRICE_STARTER=price_starter_monthly_id
VITE_POLAR_PRICE_PRO=price_pro_monthly_id
VITE_POLAR_PRICE_ENTERPRISE=price_enterprise_monthly_id
